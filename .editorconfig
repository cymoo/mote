root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.txt]
insert_final_newline = false
trim_trailing_whitespace = false

[*.sh]
indent_size = 4

[*.py]
indent_size = 4

[*.java]
indent_size = 4

[*.kt]
indent_size = 4

[*.rs]
indent_size = 4

[*.go]
indent_size = 4
